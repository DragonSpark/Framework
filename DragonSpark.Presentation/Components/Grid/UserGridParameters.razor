@using DragonSpark.Model.Results
@using DragonSpark.Model.Selection

@ChildContent(new(_client, _address))

@code {
    HttpClient _client  = null!;
    string     _address = null!;

    protected override void OnInitialized()
    {
        _client  = Clients.Get();
        _address = Address.Get(Path).ToString();
        base.OnInitialized();
    }

    [Parameter]
    public required string Path { get; set; }

    [Parameter]
    public required IResult<HttpClient> Clients { get; set; }

    [Parameter]
    public required ISelect<string, Uri> Address { get; set; }

    [Parameter]
    public required RenderFragment<UserGridParametersView> ChildContent { get; set; }
}