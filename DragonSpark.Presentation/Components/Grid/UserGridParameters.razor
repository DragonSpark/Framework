@using DragonSpark.Model.Results
@using DragonSpark.Model.Selection

@ChildContent(new(_client, _address))

@code {
    HttpClient _client  = null!;
    string     _address = null!;

    protected override void OnInitialized()
    {
        _client  = Clients.Get();
        _address = Address.Get(Path).ToString();
        base.OnInitialized();
    }

    [Parameter]
    public string Path { get; set; } = null!;

    [Parameter]
    public IResult<HttpClient> Clients { get; set; } = null!;

    [Parameter]
    public ISelect<string, Uri> Address { get; set; } = null!;

    [Parameter]
    public RenderFragment<UserGridParametersView> ChildContent { get; set; } = null!;
}