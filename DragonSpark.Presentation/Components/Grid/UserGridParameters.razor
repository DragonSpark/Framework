@using DragonSpark.Application.AspNet
@using DragonSpark.Model.Selection
@using System.Security.Claims

@ChildContent(new(_client, _address))

@code {
    HttpClient _client  = null!;
    string     _address = null!;

    protected override void OnInitialized()
    {
        _client  = Clients.Get(State);
        _address = Address.Get(Path).ToString();
        base.OnInitialized();
    }

    [Parameter]
    public string Path { get; set; } = null!;

    [Parameter]
    public ISelect<ClaimsPrincipal, HttpClient> Clients { get; set; } = null!;

    [Parameter]
    public ISelect<string, Uri> Address { get; set; } = null!;

    [Parameter]
    public RenderFragment<UserGridParametersView> ChildContent { get; set; } = null!;

    [CascadingParameter]
    AuthenticationState State { get; set; } = null!;
}