<Evaluate>
    let scripts = document.getElementsByTagName("script");
    let exists = false;
    let index = 0;
    let source = '@Source';

    while(index @("<") scripts.length && !exists)
    {
        exists = scripts[index].src.endsWith(source);
        index++;
    }

    if(!exists) {
        document.body.appendChild(Object.assign(document.createElement('script'), { src: source, type: '@Type' }));
    }

</Evaluate>

@code {

    [Parameter]
    public string Source { get; set; } = default!;

    [Parameter]
    public string Type { get; set; } = "text/javascript";
}