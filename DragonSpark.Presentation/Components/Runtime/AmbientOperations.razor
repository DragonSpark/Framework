@using DragonSpark.Application.Runtime.Operations.Execution
@inject IInstanceOperations Model

@code {
    [Parameter]
    public object Instance { get; set; } = default!;

    protected override Task OnAfterRenderAsync(bool firstRender)
        => firstRender ? base.OnAfterRenderAsync(firstRender) : Model.Get(Instance).Get().AsTask();

}
