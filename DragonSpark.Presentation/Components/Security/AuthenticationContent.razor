@using DragonSpark.Application.Security.Identity.Authentication
@using DragonSpark.Compose
@using DragonSpark.Model.Selection.Alterations
@typeparam T where T : DragonSpark.Application.Security.Identity.IdentityUser
<DragonSpark.Presentation.Components.Security.CascadingAuthenticationState>
	<DragonSpark.Presentation.Components.Security.AuthenticationStateDisplay T="T">
		<CascadingValue TValue="AuthenticationState<T>" Value="@context">
			@ChildContent(context)
		</CascadingValue>
	</DragonSpark.Presentation.Components.Security.AuthenticationStateDisplay>
</DragonSpark.Presentation.Components.Security.CascadingAuthenticationState>

@code {
    [Parameter]
	public RenderFragment<AuthenticationState<T>> ChildContent { get; set; } = default!;
}
