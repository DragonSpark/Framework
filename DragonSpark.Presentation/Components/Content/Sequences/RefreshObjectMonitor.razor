@using DragonSpark.Presentation.Components.Eventing

<HandlerView T="RefreshObjectMessage" Received="@HandleAsync" />

@code {
	[Parameter]
	public object Topic { get; set; } = null!;

	[Parameter]
	public EventCallback<object> Updated { get; set; }

	Task HandleAsync(RefreshObjectMessage message)
		=> message.Subject == Topic ? Updated.Invoke(Topic) : Task.CompletedTask;
}