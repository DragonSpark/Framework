@using DragonSpark.Compose
@using System.Threading

@typeparam T

@inherits ContentComponentBase<T>

<ApplicationContentView TValue="T" Content="@Content" ChildContent="@ChildContent" />

@code {

    [Parameter]
    public required Func<CancellationToken, Task<T?>> Factory { get; set; }

    [Parameter]
    public required RenderFragment<T> ChildContent { get; set; }

    protected override ValueTask<T?> GetContent() => Factory(Stop).ToOperation();

}