@using System.Net
<img class="@Class" src="@_address" />

@code {
    string _address = string.Empty;
    protected override void OnInitialized()
    {
        _address = $"//via.placeholder.com/{Width}x{Height}.png/{Background}/{Foreground}?text={WebUtility.UrlEncode(Text)}";
        base.OnInitialized();       
    }

    [Parameter]
    public string Class { get; set; } = "img-fluid";

    [Parameter]
    public string Background { get; set; } = "000000";

    [Parameter]
    public string Foreground { get; set; } = "FFFFFF";

    [Parameter]
    public string Text { get; set; } = "TBD";

    [Parameter]
    public ushort Width { get; set; } = 100;

    [Parameter]
    public ushort Height { get; set; } = 100;
}