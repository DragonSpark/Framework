@typeparam T

@using DragonSpark.Presentation.Components.Content.Rendering

@inherits Templates.ActiveContentTemplateComponentBase<T>

@inject RenderStateStore Render

@if (_subject is null)
{
	@NotFoundTemplate
}
else if (_subject is { Status.IsFaulted : true })
{
	@ExceptionTemplate
}
else if (_fragment is not null)
{
	@_fragment
}
else
{
	@LoadingTemplate
}