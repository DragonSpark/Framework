@typeparam T


@inject DialogService Dialogs


@code {

    [Parameter]
    public string Title { get; set; } = null!;

    [Parameter]
    public string Width { get; set; } = "unset";

    [Parameter]
    public RenderFragment<DialogParameter<T>> ChildContent { get; set; } = null!;

    public Task Open(T entity) => Dialogs.OpenAsync(Title, x => ChildContent(new(x, entity)), new() { Width = Width });

    public Task Close()
    {
        Dialogs.Close();
        return Task.CompletedTask;
    }
}