@using DragonSpark.Compose

@inherits ConfirmResultComponent

<Confirm EnableFocus="@EnableFocus" PrimaryClass="@PrimaryClass" SecondaryClass="@SecondaryClass" ContentClass="@ContentClass"
         Confirmation="@Confirmation" ChildContent="@ChildContent" PrimaryText="@PrimaryText" SecondaryText="@SecondaryText"
         Accept="() => Result = DialogResult.Ok" Cancel="() => Result = DialogResult.Cancel"
         />

@code {
    [Parameter]
    public bool EnableFocus { get; set; } = true;

    protected override void OnParametersSet()
    {
        Result = null;
        base.OnParametersSet();
    }

    public DialogResult? Result { get; private set; }
}
