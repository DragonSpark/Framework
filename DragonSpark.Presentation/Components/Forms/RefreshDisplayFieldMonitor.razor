<CallbackRenderGate Context="callbacks">
    <DragonSpark.Presentation.Components.Forms.FieldNameMonitor Model="@Model" Updated="@callbacks.Register(_empty)" />
</CallbackRenderGate>

@ChildContent

@code {
    EventCallback _empty;

    protected override void OnInitialized()
    {
        _empty = EmptyCallback.Default.Get(this);
        base.OnInitialized();
    }

    [Parameter]
    public object? Model { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}
