<CascadingValue Value="@_registry" ChildContent="@ChildContent(_registry)" />

@code {
    
    FieldRegistry _registry = default!;

    [CascadingParameter]
    EditContext? EditContext
    {
        get => _context;
        set
        {
            if (_context != value)
            {
                if (_context != null)
                {
                    _registry.Clear();
                }

                if ((_context = value) != null)
                {
                    _registry = new FieldRegistry();
                }
            }
        }
    }	EditContext? _context;

    [Parameter]
    public RenderFragment<FieldRegistry> ChildContent { get; set; } = default!;
}