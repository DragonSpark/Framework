<CascadingValue Value="@_registry" ChildContent="@_content" IsFixed="true" />

@code {
    FieldRegistry _registry = default!;
    RenderFragment? _content;

    [CascadingParameter]
    EditContext? EditContext
    {
        get => _context;
        set
        {
            if (_context != value)
            {
                if (_context is not null)
                {
                    _registry.Clear();
                }

                if ((_context = value) is not null)
                {
                    _registry = new FieldRegistry();
                    _content  = ChildContent(_registry);
                }
            }
        }
    }	EditContext? _context;

    [Parameter]
    public RenderFragment<FieldRegistry> ChildContent { get; set; } = default!;
}