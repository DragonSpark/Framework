@using DragonSpark.Compose
@using DragonSpark.Model.Results

<ValidationStateMonitor Changed="@Render" />

<ShouldRenderComponent Enabled="@_render" ChildContent="@ChildContent" />

@code {
    readonly Switch _render = new();

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    void Render()
    {
        using (_render.Assigned(true))
        {
            StateHasChanged();
        }
    }
}
