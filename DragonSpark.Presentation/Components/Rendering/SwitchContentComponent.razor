@using DragonSpark.Presentation.Components.Content.Templates

@if (Input)
{
    @ActiveTemplate
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool Input { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public RenderFragment ActiveTemplate { get; set; } = DefaultLoadingTemplate.Default;
}
