@using DragonSpark.Presentation.Components.Content.Templates

@if (Input)
{
    @ChildContent
}
else
{
    @AlternateTemplate
}

@code {
    [Parameter]
    public bool Input { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment AlternateTemplate { get; set; } = DefaultLoadingTemplate.Default;
}
