@using JetBrains.Annotations
@typeparam T


@inject DialogService Dialogs


@code {

    [Parameter, UsedImplicitly]
    public string Title { get; set; } = default!;

    [Parameter, UsedImplicitly]
    public RenderFragment<DialogParameter<T>> ChildContent { get; set; } = default!;

    public Task Open(T entity) => Dialogs.OpenAsync(Title, x => ChildContent(DialogParameter.From(x, entity)),
                                                new DialogOptions {Width = "unset"});

    public Task Close()
    {
        Dialogs.Close();
        return Task.CompletedTask;
    }

}