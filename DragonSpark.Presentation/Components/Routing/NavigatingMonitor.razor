@using DragonSpark.Compose
@inherits NavigationAwareComponent
@code {
    protected override async ValueTask<bool> Allow(LocationChangingContext parameter)
    {
        await Changing.Invoke(parameter).Off();
        return !parameter.IsNavigationIntercepted;
    }

    [Parameter]
    public EventCallback<LocationChangingContext> Changing { get; set; }
}
