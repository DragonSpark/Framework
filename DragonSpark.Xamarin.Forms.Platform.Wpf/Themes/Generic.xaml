	</DataTemplate>

	<DataTemplate x:Key="PickerFullItemTemplate">
		<StackPanel MaxHeight="{Binding MaxHeight}">
			<TextBlock Text="{Binding Data}" FontSize="43" />
		</StackPanel>
	</DataTemplate>

	<Style TargetType="{x:Type rendering:TabbedPageRenderer}">
		<Setter Property="ItemTemplate">
			<Setter.Value>
