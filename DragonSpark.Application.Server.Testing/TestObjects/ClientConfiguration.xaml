<ioC:LocatorDefinition
	x:Class="DragonSpark.Application.Server.Testing.TestObjects.ClientConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:client="clr-namespace:DragonSpark.Server.ClientHosting;assembly=DragonSpark.Server" xmlns:ds="http://framework.dragonspark.us"
	xmlns:ioC="clr-namespace:DragonSpark.IoC;assembly=DragonSpark"
    xmlns:dragonSpark="clr-namespace:DragonSpark;assembly=DragonSpark"
	xmlns:reflection="clr-namespace:System.Reflection;assembly=mscorlib"
	xmlns:testObjects="clr-namespace:DragonSpark.Application.Server.Testing.TestObjects"
	xmlns:clientHosting="clr-namespace:DragonSpark.Server.ClientHosting;assembly=DragonSpark.Server">
	<ds:RegisterFromMetadataCommand />
	<ds:AssignServiceLocatorCommand />
	<ds:UnityInstance>
		<clientHosting:ClientApplicationConfiguration EnableDebugging="{ds:IsDebug}" Widgets="{ds:Factory {x:Type clientHosting:WidgetsBuilder}}" Commands="{ds:Factory {x:Type clientHosting:CommandsBuilder}}" Logo="{ds:PathSupport '~/images/Logo.png'}">
			<clientHosting:ClientApplicationConfiguration.ApplicationDetails>
				<dragonSpark:ApplicationDetails 
					Title="{ds:Metadata {x:Type reflection:AssemblyTitleAttribute}, 'Title'}"
					Product="{ds:Metadata {x:Type reflection:AssemblyProductAttribute}, 'Product'}" 
					Company="{ds:Metadata {x:Type reflection:AssemblyCompanyAttribute}, 'Company'}" 
					Description="{ds:Metadata {x:Type reflection:AssemblyDescriptionAttribute}, 'Description'}"
					Configuration="{ds:Metadata {x:Type reflection:AssemblyConfigurationAttribute}, 'Configuration'}"
					Copyright="{ds:Metadata {x:Type reflection:AssemblyCopyrightAttribute}, 'Copyright'}" 
					Version="{ds:AssemblyVersion}"
					
					DeploymentDate="3/1/2013" 
					CompanyUri="http://www.dragonspark.us"
					/>
			</clientHosting:ClientApplicationConfiguration.ApplicationDetails>
			<clientHosting:ClientApplicationConfiguration.Navigation>
				<ds:FactoryExtension Type="{x:Type clientHosting:NavigationBuilder}" Parameter="{ds:Locate testObjects:Navigation}" />
			</clientHosting:ClientApplicationConfiguration.Navigation>
		</clientHosting:ClientApplicationConfiguration>
	</ds:UnityInstance>
</ioC:LocatorDefinition>