<ResourceDictionary xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:longListSelector="clr-namespace:DragonSpark.Application.Client.Controls.LongListSelector"
					xmlns:controls="clr-namespace:DragonSpark.Application.Client.Controls">
	<BitmapCache x:Key="BitmapCache" />
	
	<Style TargetType="longListSelector:LongListSelector">
		<Setter Property="Background" Value="{StaticResource PhoneBackgroundBrush}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<longListSelector:TemplatedListBox x:Name="TemplatedListBox" Background="{TemplateBinding Background}">
						<longListSelector:TemplatedListBox.ItemContainerStyle>
							<Style TargetType="ListBoxItem">
								<Setter Property="HorizontalContentAlignment" Value="Stretch" />
							</Style>
						</longListSelector:TemplatedListBox.ItemContainerStyle>
					</longListSelector:TemplatedListBox>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="controls:PanoramaControl">
		<Setter Property="Width" Value="480" />
		<Setter Property="Height" Value="800" />
		<Setter Property="DefaultItemWidth" Value="433" />
		<Setter Property="DefaultItemHeight" Value="622" />
		<Setter Property="FontFamily" Value="Segoe WP Light" />
		<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
		<Setter Property="Background" Value="Transparent" />

		<!-- PanoramaView template -->
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:PanoramaControl">
					<Canvas Name="LayoutRoot" Background="{TemplateBinding Background}" CacheMode="{StaticResource BitmapCache}">

						<StackPanel Name="BackgroundPanelHost" Orientation="Horizontal" CacheMode="{StaticResource BitmapCache}">
							<ContentPresenter Name="BackgroundPanel" Height="{TemplateBinding Height}" Content="{TemplateBinding BackgroundImage}" ContentTemplate="{TemplateBinding BackgroundImageTemplate}" CacheMode="{StaticResource BitmapCache}" />
						</StackPanel>

						<StackPanel Name="TitlePanelHost" Orientation="Horizontal" Margin="10,0,0,0" CacheMode="{StaticResource BitmapCache}">
							<ContentPresenter Name="TitlePanel" Content="{TemplateBinding Title}" ContentTemplate="{TemplateBinding TitleTemplate}" CacheMode="{StaticResource BitmapCache}" />
						</StackPanel>

						<StackPanel Name="ItemsPanelHost" Orientation="Horizontal" Margin="22,178,0,0" CacheMode="{StaticResource BitmapCache}">
							<ItemsPresenter Name="ItemsPanel" CacheMode="{StaticResource BitmapCache}" />
						</StackPanel>

					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>

		<!-- BackgroundImage template -->
		<Setter Property="BackgroundImageTemplate">
			<Setter.Value>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<Image Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" CacheMode="{StaticResource BitmapCache}" />
					</StackPanel>
				</DataTemplate>
			</Setter.Value>
		</Setter>

		<!-- Title template -->
		<Setter Property="TitleTemplate">
			<Setter.Value>
				<DataTemplate>
					<TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" Margin="0,-75,0,0" FontSize="186" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:PanoramaControl}}" CacheMode="{StaticResource BitmapCache}" />
				</DataTemplate>
			</Setter.Value>
		</Setter>

		<!-- ItemsPanel template -->
		<Setter Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
	</Style>

<!--
  Style : local:PanoramaItem
  File : Panorama\PanoramaItem.xaml
-->
	<Style TargetType="controls:PanoramaItem">
		<Setter Property="Header" Value="header" />
		<Setter Property="AutoSnap" Value="True" />
		<Setter Property="FontFamily" Value="Segoe WP SemiLight" />
		<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:PanoramaItem">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="100" />
							<RowDefinition Height="25" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<ContentControl x:Name="PanoramaItemHeader" Grid.Row="0" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" HorizontalAlignment="Left" FontFamily="{TemplateBinding FontFamily}" FontSize="72" Foreground="{TemplateBinding Foreground}" CacheMode="{StaticResource BitmapCache}" />
						<ContentPresenter x:Name="PanoramaItemContent" Grid.Row="2" Width="{TemplateBinding Width}" CacheMode="{StaticResource BitmapCache}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

<!--
  Style : local:PivotControl
  File : Pivot\PivotControl.xaml
-->
	<Style TargetType="controls:PivotControl">
		<Setter Property="Width" Value="480" />
		<Setter Property="Height" Value="800" />
		<Setter Property="DefaultItemWidth" Value="470" />
		<Setter Property="DefaultItemHeight" Value="615" />
		<Setter Property="FontFamily" Value="Segoe WP Light" />
		<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:PivotControl">
					<Canvas Name="LayoutRoot" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" Background="{TemplateBinding Background}" CacheMode="{StaticResource BitmapCache}">

						<ContentPresenter Name="TitleContent" Margin="24,50,0,0" Content="{TemplateBinding Title}" ContentTemplate="{TemplateBinding TitleTemplate}" CacheMode="{StaticResource BitmapCache}" />

						<StackPanel Name="HeadersPanelHost" Margin="12,80,0,0" Height="100" VerticalAlignment="Top" Orientation="Horizontal" CacheMode="{StaticResource BitmapCache}">
						</StackPanel>

						<Canvas Name="ItemsPanelHost" Margin="10,185,0,0" Height="615" Width="{TemplateBinding Width}" CacheMode="{StaticResource BitmapCache}">
						</Canvas>

					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>

		<!-- Title template -->
		<Setter Property="TitleTemplate">
			<Setter.Value>
				<DataTemplate>
					<TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" FontSize="22" FontFamily="Segoe WP Semibold" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:PivotControl}}" CacheMode="{StaticResource BitmapCache}" />
				</DataTemplate>
			</Setter.Value>
		</Setter>

		<!-- UnselectedHeader template -->
		<Setter Property="UnselectedHeaderTemplate">
			<Setter.Value>
				<DataTemplate>
					<TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" Margin="10,-10" FontSize="72" Foreground="#FF999999" CacheMode="{StaticResource BitmapCache}" />
				</DataTemplate>
			</Setter.Value>
		</Setter>

		<!-- SelectedHeader template -->
		<Setter Property="SelectedHeaderTemplate">
			<Setter.Value>
				<DataTemplate>
					<TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" Margin="10,-10" FontSize="72" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:PivotControl}}" CacheMode="{StaticResource BitmapCache}" />
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>

<!--
  Style : local:PivotItem
  File : Pivot\PivotItem.xaml
-->
	<Style TargetType="controls:PivotItem">
		<Setter Property="Width" Value="460" />
		<Setter Property="FontFamily" Value="Segoe WP SemiLight" />
		<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:PivotItem">
					<ContentPresenter x:Name="PivotItemContent" Width="{TemplateBinding Width}" CacheMode="{StaticResource BitmapCache}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>