<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="DragonSpark.Testing.Client.Shell">
	<TableView Intent="Menu" BindingContext="{x:Reference LayoutRoot}" >
		<TableRoot>
			<TableSection Title="Views for Presentation">
				<TextCell Text="Label" Command="{Binding NavigateCommand}" CommandParameter="{x:Type formsGallery:LabelDemoPage}" />
				<TextCell Text="Image" Command="{Binding NavigateCommand}" CommandParameter="{x:Type formsGallery:ImageDemoPage}" />
				<TextCell Text="BoxView" Command="{Binding NavigateCommand}" CommandParameter="{x:Type formsGallery:BoxViewDemoPage}" />
				<TextCell Text="WebView" Command="{Binding NavigateCommand}" CommandParameter="{x:Type formsGallery:WebViewDemoPage}" />
				<TextCell Text="Map" Command="{Binding NavigateCommand}" CommandParameter="{x:Type formsGallery:MapDemoPage}" />
			</TableSection>
		</TableRoot>
	</TableView>
</ContentPage>