<?xml version="1.0" encoding="utf-8" ?>
<client:Application xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:client="clr-namespace:DragonSpark.Client;assembly=DragonSpark.Client"
	xmlns:local="clr-namespace:DragonSpark.Testing.Client;assembly=DragonSpark.Testing.Client"
	x:Class="DragonSpark.Testing.Client.ApplicationDefinition"
	Logo="Images/Logo.png"
	>
	<client:Application.Items>
		<ToolbarItem Text="Application Item 1" />
		<ToolbarItem Text="Application Item 2" />
	</client:Application.Items>
	<Application.MainPage>
		<ContentPage BackgroundColor="Red" Title="Why Hello World!">
			<ContentPage.ToolbarItems>
				<ToolbarItem Text="Page Item 1" Icon="Images/Play.png" />
				<ToolbarItem Text="Page Item 2" Icon="Images/Stop.png" />
				<ToolbarItem Text="Another Page Item" Order="Secondary" />
			</ContentPage.ToolbarItems>
			<Label Text="Hello World!" VerticalOptions="Center" HorizontalOptions="Center" />
		</ContentPage>
	</Application.MainPage>
	<!--<local:Shell />-->
</client:Application>