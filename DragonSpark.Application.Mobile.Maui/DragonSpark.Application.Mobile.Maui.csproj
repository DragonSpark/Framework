<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>$(DefaultMauiTargetFrameworks)</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net9.0-tizen</TargetFrameworks> -->
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
	</PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\DragonSpark.Application.Mobile\DragonSpark.Application.Mobile.csproj" />
    </ItemGroup>
	<ItemGroup>
	  <PackageReference Include="CommunityToolkit.Mvvm" />
      <PackageReference Include="CommunityToolkit.Maui" />
      <PackageReference Include="Microsoft.Maui.Controls" />
      <PackageReference Include="Sentry.Maui" />
      <PackageReference Include="Syncfusion.Licensing" />
      <PackageReference Include="Syncfusion.Maui.DataForm" />
	  <PackageReference Include="Syncfusion.Maui.Toolkit" />
	  <PackageReference Include="System.CodeDom" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Update="Platforms\Android\Attestation\Registrations.cs">
	    <ExcludeFromCurrentConfiguration>true</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\iOS\Extensions.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\iOS\Http\Registrations.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\iOS\Registrations.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net9.0-android'">
	  <PackageReference Include="Xamarin.Google.Android.Play.Integrity" />
	</ItemGroup>

</Project>
