<Project>
  <PropertyGroup>
    <RunAnalyzersDuringLiveAnalysis>false</RunAnalyzersDuringLiveAnalysis>
	<EnableNETAnalyzers>true</EnableNETAnalyzers>
	<DisableImplicitNamespaceImports>true</DisableImplicitNamespaceImports>	
	 <GitVersionBaseDirectory>$(MSBuildThisFileDirectory)</GitVersionBaseDirectory>
	 <Company>DragonSpark Technologies Incorporated</Company>
	 <Copyright>Copyright &#169; 2022 DragonSpark Technologies Incorporated</Copyright>
	 <Trademark>DragonSpark Technologies Incorporated</Trademark>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>NU1603;NU1608;CS8669</NoWarn>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'!='Debug|AnyCPU'">
    <NoWarn>CS8669</NoWarn>
  </PropertyGroup>
	<ItemGroup Condition="'$(Configuration)'=='Release'">
		<PackageReference Include="Nerdbank.GitVersioning"
                    Version="3.4.255"
                    PrivateAssets="all"
                    Condition="!Exists('packages.config')" />
	</ItemGroup>
	<ItemGroup>
		<Content Remove="packages.lock.json" />
		<None Remove="packages.lock.json" />
	</ItemGroup>
</Project>